.slider-container {
	height: 30px;
}
.theme-green .back-bar {
	height: 20px;
	border-radius: 20px;
}
/*渐变背景*/
.theme-green .back-bar .selected-bar {
	border-radius: 20px;
	background: -webkit-linear-gradient(left, #3ee8db,#b89bd7);
}
.theme-green .back-bar .pointer {
	width: 20px;
	height: 30px;
	border:  1px solid #FFFFFF;
}
/*隐藏标尺*/
.slider-container .scale {
	display: block;
}